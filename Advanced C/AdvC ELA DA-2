#include <stdio.h>
int main()
{
    char input[100];
    int ctr1=0,ctr2=0,ctr3=0;
    int i = 0;
    printf("Enter the characters separated by space: ");
    fgets(input, sizeof(input), stdin);
    while (input[i] != '\0')
    {
        if (input[i] == 'A') 
        ctr1++;
        else if (input[i] == 'B')
        ctr2++;
        else if (input[i] == 'C')
        ctr3++;
        i++;
    }
    for (i = 0; i < ctr3; i++)
    {
        printf("C");
    }
    for (i = 0; i < ctr2; i++)
    {
        printf("B");
    }
    for (i = 0; i < ctr1; i++)
    {
        printf("A");
    }
    return 0;
}
